<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/imagemfundo"
    >

    <TextView
        android:id="@+id/Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:height="50dp"
        android:width="500dp"
        android:gravity="center"
        android:textSize="30dp"
        android:text="PASSAGEIRO"
        />
    <TextView
        android:id="@+id/TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:textSize="20dp"

        android:text="Para onde você vai?:"
        />

    <EditText
        android:id="@+id/EdtTex2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:drawableRight="@drawable/ic_baseline_add_location_24" />

    <TextView
        android:id="@+id/TextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:text="Para onde você vai?:"
        />

    <EditText
        android:id="@+id/EdtTex1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        android:drawableRight="@drawable/ic_baseline_add_location_24" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn1"
        android:textColor="@color/black"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="80dp"
        android:layout_gravity="center"
        android:text="Buscar Carona"
        style="@style/Button"
        />

</LinearLayout>